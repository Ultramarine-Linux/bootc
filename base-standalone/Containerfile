# Please build from the root directory of the repository

FROM ghcr.io/ultramarine-linux/ultramarine:41
RUN dnf5 install -y kernel bootc bootupd ostree flatpak dbus dbus-daemon rpmdevtools make selinux-policy python3-pip jq @development-tools gcc cairo-devel python3-devel 'pkgconfig(gobject-introspection-1.0)' 'pkgconfig(cairo-gobject)' 'dnf-command(config-manager)'
# COPY --from=builder /target-rootfs/ /
RUN rm -rf /boot/*

RUN bootc container lint

LABEL containers.bootc 1
LABEL bootc.diskimage-builder quay.io/centos-bootc/bootc-image-builder
ENV container=oci
# Need to reference builder here to force ordering. But since we have to run
# something anyway, we might as well cleanup after ourselves.
STOPSIGNAL SIGRTMIN+3
CMD ["/sbin/init"]
